generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String
  name           String?
  secondName     String?
  firstLastName  String?
  secondLastName String?
  sensors        sensor[]
}

model sensor {
  id              Int           @id @default(autoincrement())
  name            String
  location        location      @relation(fields: [locationId], references: [id])
  locationId      Int
  mesurements     measurement[]
  connected       Boolean
  batteryLevel    Int?
  temperatureMax  Int?          @default(30)
  temperatureMin  Int?          @default(0)
  humidityMax     Int?          @default(100)
  humidityMin     Int?          @default(0)
  readingInterval Int?          @default(10)
  user            user?         @relation(fields: [userId], references: [id])
  userId          Int?
}

model location {
  id      Int      @id @default(autoincrement())
  address String
  sensors sensor[]
}

model measurement {
  id          Int      @id @default(autoincrement())
  sensor      sensor   @relation(fields: [sensorId], references: [id])
  sensorId    Int
  temperature Float
  humidity    Float
  timestamp   DateTime
}
